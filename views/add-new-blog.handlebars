{{!-- Add a new Blog --}}

<section>
    <a href='/dashboard' class='justify-content-end'>&larr; Back to dashboard</a>
    <h2 class='title'>Add a new Blog</h2>
    <hr>

    <form class='new-blog-form'>

        <div>
            <label for="blog-title">Titles:</label>
            <input class='input' type='text' id='blog-titles' name='blog-title' placeholder='insert blog title here' />
        </div>

        <div>
            <label for='blog-content'>Content:</label>
            <textarea class='form-control rounded-3 z-depth-1' name='blog-content' id='blog-contents' rows='10'
                placeholder='insert blog content here'></textarea>
        </div>
        <button type='submit' id="create-blog" class='btn btn-primary justify-content-end'>create blog</button>
    </form>
</section>

<script src='/js/add-blog.js'></script>