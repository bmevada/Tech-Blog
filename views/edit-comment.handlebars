{{!-- view all blog post - update and delete a comment--}}
{{>blog-info blog}}

{{#if loggedIn}}
<form class='comment-form'>
    <div>
        <textarea class='form control rounded-3 z-depth-1 ml-5' name='comment-body' rows='5'
            placeholder='Add comment'></textarea>
    </div>

    <div>
        <button class='btn btn-warning ml-5 mb-5' type='submit'>Add a Comment</button>
    </div>
</form>
{{/if}}

{{>comments blog.comments}}

{{#if loggedIn}}

<script src='/js/comment.js'></script>
{{/if}}
